<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AplicatieProiectMobil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AplicatieProiectMobil"
    xmlns:mylogin="clr-namespace:AplicatieProiectMobil.Views"
    Shell.FlyoutBehavior="Disabled">

    <Shell.BackgroundColor>
        <OnPlatform x:TypeArguments="Color">
            <On Platform="iOS" Value="White" />
            <On Platform="Android" Value="#FFF" />
        </OnPlatform>
    </Shell.BackgroundColor>

    <FlyoutItem Route="Login">

        <ShellContent ContentTemplate="{DataTemplate mylogin:LoginPage}"></ShellContent>
    </FlyoutItem>
    
    <TabBar>
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Icon="about_icon.jpg"/>
        <ShellContent
            Title="Lista restaurante"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="restaurant_icon.jpg" />
        <ShellContent
            Title="Pachete"
            ContentTemplate="{DataTemplate local:PachetPage}"
            Icon="package_icon.img" />
        <ShellContent
            Title="Review"
            ContentTemplate="{DataTemplate local:ReviewPage}"
            Icon="review_icon.jpg" />
    </TabBar>

</Shell>