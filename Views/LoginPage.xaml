<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicatieProiectMobil.Views.LoginPage"
             BackgroundImageSource="poza.jpg"
             Title="LoginPage">
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Entry Placeholder="Username" Text="{Binding UserName}"></Entry>

        <Entry Placeholder="Password" Text="{Binding MyloginRequestModel.Password}"></Entry>
        <Button Text="Login" BackgroundColor="Blue" TextColor="Beige" Command="{Binding LoginCommand}"></Button>


    </VerticalStackLayout>
</ContentPage>